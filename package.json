{
  "name": "prototype-hono-drizzle-codex",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace backend",
    "generate:api": "npm run generate --workspace openapi",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "db:reset": "docker compose down -v && docker compose up -d",
    "backend:build": "npm run build --workspace backend",
    "backend:test": "npm run test --workspace backend",
    "backend:test:coverage": "npm run test:coverage --workspace backend",
    "build": "npm run backend:build",
    "test": "npm run backend:test",
    "test:coverage": "npm run backend:test:coverage",
    "build:test": "npm run backend:build && npm run backend:test",
    "api:update": "npm run generate:api && npm run backend:build && npm run backend:test",
    "db:generate": "cd apps/backend && npx drizzle-kit generate",
    "db:push": "cd apps/backend && npx drizzle-kit push",
    "db:migrate": "npm run db:generate && npm run db:push && npm run backend:test",
    "verify": "npm run build:test"
  }
}
