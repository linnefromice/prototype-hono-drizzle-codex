{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "openapi": ["../../packages/openapi/dist/index.ts"],
      "openapi/*": ["../../packages/openapi/dist/*"]
    }
  },
  "include": ["src"]
}
